<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"

    >


    <TextView
        android:id="@+id/ErrorTilte"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Veuillez corriger les éléments suivant"
        android:textColor="#000000"
        android:textSize="18dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.108" />

    <TextView
        android:id="@+id/ErrorMessages"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:text="Les erreurs sont:"
        android:textColor="?attr/colorError"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/OKbuttom"
        app:layout_constraintTop_toBottomOf="@+id/ErrorTilte"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/OKbuttom"
        android:layout_width="match_parent"
        android:layout_height="45dp"

        android:layout_marginTop="64dp"
        android:text="OK"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/ErrorTilte"
        app:layout_constraintStart_toStartOf="@+id/ErrorTilte"
        app:layout_constraintTop_toBottomOf="@+id/ErrorMessages"
        app:layout_constraintVertical_bias="0.251" />
</androidx.constraintlayout.widget.ConstraintLayout>